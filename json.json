

[
  { // sign up for customer, rest. manager
    "endpoint": "signup",
    "path": "/signup",
    "method": "POST",
    "request-data": {
      "name": { // only for customer (option for rest. manager)
        "type": "string",
        "max": 30,
        "required": true
      },
      "mobile": { 
        "type": "integer",
        "max": 10,
        "required": true
      },
      "email": { 
        "type": "string",
        "max": 30,
        "required": true
      },
      "country": {  // option for customer
        "type": "string",
        "max": 10,
        "required": false
      },
      "city": { // option for customer
        "type": "String",
        "max": 30,
        "required": true
      },
      "Restaurant Name": { //only for Restaurant Managers.
        "type": "String",
        "max": 30,
        "required": true
      },
      "password": {
        "type": "String",
        "max": 30,
        "required": true
      }
    },
    "response": [
      {
        "status": "success",
        "response": {
          "http-status": 200,
          "response-data": {
            "flag": true,
            "msg": "Registration successful"
          }
        }
      },
      {
        "status": "client-error",
        "response": {
          "http-status": 404,
          "response-data": {
            "flag": false,
            "msg": "user/restaraunt already exist with same username/email/mobile"
          }
        }
      },

      {
        "status": "server-error",
        "response": {
          "http-status": 500,
          "response-data": {
            "flag": false,
            "msg": "Internal server error"
          }
        }
      }
    ]
  },
